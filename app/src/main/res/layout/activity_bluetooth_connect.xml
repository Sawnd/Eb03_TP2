<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".BluetoothConnectActivity">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right" />

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/ListAppTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appareils appairés"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="660dp" />

        <ListView
            android:id="@+id/ListApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/ListFoundTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appareils découverts" />

        <ListView
            android:id="@+id/ListFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
